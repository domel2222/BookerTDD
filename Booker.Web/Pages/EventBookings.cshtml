@page
@model Booker.Web.Pages.EventBookingsModel
@{
    ViewData["Title"] = "Event Booking";
}

<h1 class="display-3">Event Booking</h1>

<p class="table table-striped table-bordered dt-responsive flex-nowrap">Here you see a table with all event bookings ordered by date</p>

<hr />

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Event Id</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        {
        @foreach (var eventBooking in Model.EventBooking)
        {
            <tr>
                <td>@eventBooking.DateTime.ToShortDateString()</td>
                <td>@eventBooking.EventId</td>
                <td>@eventBooking.Email</td>
                <td>@eventBooking.FirstName</td>
                <td>@eventBooking.LastName</td>
            </tr>
        }
    </tbody>   
</table>