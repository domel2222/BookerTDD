@page
@model Booker.Web.Pages.BookEventModel
@{
    ViewData["Title"] = "Book a Event";

    <h1 class="display-4">Book a Event</h1>
    <p. class="lead">choose a event in our <b>web page</b> </p.>

    <form action="/" method="post">

        <div class="form-group">
            <label asp-for="EventBookingRequest.FirstName" class="control-label"></label>
            <input asp-for="EventBookingRequest.FirstName" class="form-control" />
            <span asp-validation-for="EventBookingRequest.FirstName" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label asp-for="EventBookingRequest.LastName" class="control-label"></label>
            <input asp-for="EventBookingRequest.LastName" class="form-control" />
            <span asp-validation-for="EventBookingRequest.LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EventBookingRequest.Email" class="control-label"></label>
            <input asp-for="EventBookingRequest.Email" class="form-control" />
            <span asp-validation-for="EventBookingRequest.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EventBookingRequest.DateTime" class="control-label"></label>
            <input asp-for="EventBookingRequest.DateTime" asp-format="{0:dd/MM/yyyy}" class="form-control" />
            <span asp-validation-for="EventBookingRequest.DateTime" class="text-danger"></span>
        </div>

    </form>
}
